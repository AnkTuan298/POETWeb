@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h2>Use a local account to log in.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Login" class="form-control" autocomplete="username" aria-required="true" placeholder="Email or Username" />
                    <label asp-for="Input.Login" class="form-label">Email or Username</label>
                    <span asp-validation-for="Input.Login" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" id="password" autocomplete="password" aria-required="true" placeholder="Password" />
                    <label asp-for="Input.Password">Password</label>
                    <button type="button"
                            class="btn btn-sm"
                            id="togglePassword"
                            aria-label="Toggle password"
                            style="position:absolute; right:6px; top:50%; transform:translateY(-50%); padding:0.18rem 0.35rem;">
                        <span id="eyeIcon">🙈</span>
                    </button>

                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('togglePassword')?.addEventListener('click', function () {
          const inp = document.getElementById('password');
          if (!inp) return;
          if (inp.type === 'password') {
            inp.type = 'text';
            document.getElementById('eyeIcon').textContent = '👁️';
          } else {
            inp.type = 'password';
            document.getElementById('eyeIcon').textContent = '🙈';
          }
        });
    </script>
}
