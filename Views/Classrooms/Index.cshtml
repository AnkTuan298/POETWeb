@model IEnumerable<POETWeb.Models.Domain.Classroom>
@{
    ViewData["Title"] = "My Classes";
    var currentPage = (int)(ViewBag.Page ?? 1);
    var pageSize = (int)(ViewBag.PageSize ?? 10);
    var total = (int)(ViewBag.Total ?? 0);
    int lastPage = (int)Math.Ceiling(total / (double)pageSize);
}

<h3>My classes</h3>

<p>
    <a class="btn btn-primary" asp-action="Create">Create class</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Subject</th>
            <th>Class Code</th>
            <th>Created</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Name</td>
                <td>@c.Subject</td>
                <td><code>@c.ClassCode</code></td>
                <td>@c.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@c.Id">Details</a>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@c.Id">Edit</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@c.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (lastPage > 1)
{
    <nav>
        <ul class="pagination">
            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(currentPage - 1)"
                   asp-route-pageSize="@pageSize">Prev</a>
            </li>

            <li class="page-item disabled">
                <span class="page-link">Page @currentPage / @lastPage</span>
            </li>

            <li class="page-item @(currentPage == lastPage ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(currentPage + 1)"
                   asp-route-pageSize="@pageSize">Next</a>
            </li>
        </ul>
    </nav>
}
